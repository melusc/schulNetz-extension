{
	"author": "",
	"dependencies": {
		"clsx": "^1.1.1",
		"preact": "^10.7.2",
		"preact-router": "^4.0.1"
	},
	"description": "",
	"devDependencies": {
		"@lusc/tsconfig": "^1.1.0",
		"@parcel/config-webextension": "^2.5.0",
		"@types/chrome": "^0.0.188",
		"concurrently": "^7.1.0",
		"env-cmd": "^10.1.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.29.4",
		"eslint-plugin-react-hooks": "^4.4.0",
		"parcel": "^2.5.0",
		"prettier": "^2.6.2",
		"rimraf": "^3.0.2",
		"typescript": "^4.6.4",
		"web-ext": "^6.8.0",
		"xo": "^0.48.0"
	},
	"license": "MIT",
	"name": "schulnetz_extension",
	"prettier": {
		"arrowParens": "avoid",
		"bracketSpacing": false,
		"singleQuote": true,
		"trailingComma": "all",
		"useTabs": true
	},
	"targets": {
		"webext-dev": {
			"sourceMap": {
				"inline": true,
				"inlineSources": true
			}
		},
		"webext-prod": {}
	},
	"scripts": {
		"build": "yarn fmt && yarn test && yarn build-only && yarn web-ext:lint",
		"build-only": "rimraf dist/webext-prod && yarn parcel:b",
		"web-ext:lint": "web-ext lint -s dist/webext-prod",
		"parcel:b": "parcel build src/manifest.json --target webext-prod --config @parcel/config-webextension",
		"parcel:w": "parcel watch src/manifest.json --target webext-dev --config @parcel/config-webextension",
		"start": "concurrently --kill-others \"web-ext run -s dist/webext-dev\" \"yarn:parcel:w\"",
		"fmt": "prettier -w . && xo --fix",
		"sign": "env-cmd \"web-ext sign -s dist/webext-prod\"",
		"test": "tsc --noEmit"
	},
	"version": "1.0.0",
	"xo": {
		"extends": [
			"xo-react"
		],
		"overrides": [
			{
				"files": "src/**/*.{ts,tsx}",
				"rules": {
					"@typescript-eslint/indent": "off",
					"@typescript-eslint/naming-convention": "off",
					"import/extensions": "off"
				}
			}
		],
		"rules": {
			"import/no-extraneous-dependencies": "off",
			"indent": "off",
			"no-mixed-spaces-and-tabs": [
				"error",
				"smart-tabs"
			],
			"react/jsx-curly-newline": "off",
			"react/jsx-indent": "off",
			"react/jsx-tag-spacing": [
				"error",
				{
					"beforeSelfClosing": "always"
				}
			],
			"react/no-unknown-property": [
				"error",
				{
					"ignore": [
						"class",
						"stroke-linecap",
						"stroke-linejoin",
						"stroke-width"
					]
				}
			],
			"react/prop-types": "off",
			"react/function-component-definition": [
				"error",
				{
					"namedComponents": "arrow-function",
					"unnamedComponents": "arrow-function"
				}
			]
		},
		"settings": {
			"react": {
				"pragma": "h",
				"pragmaFrag": "Fragment"
			}
		}
	}
}
