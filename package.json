{
	"author": "",
	"dependencies": {
		"clsx": "^1.1.1",
		"preact": "^10.5.15",
		"preact-router": "^3.2.1"
	},
	"description": "",
	"devDependencies": {
		"@types/chrome": "^0.0.159",
		"concurrently": "^6.3.0",
		"copy-webpack-plugin": "^9.0.1",
		"env-cmd": "^10.1.0",
		"eslint-config-xo-react": "^0.25.0",
		"prettier": "^2.4.1",
		"terser-webpack-plugin": "^5.2.4",
		"ts-loader": "^9.2.6",
		"typescript": "^4.4.3",
		"web-ext": "^6.4.0",
		"webpack": "^5.58.0",
		"webpack-cli": "^4.9.0",
		"xo": "^0.45.0"
	},
	"license": "MIT",
	"main": "index.js",
	"name": "schulnetz_extension",
	"prettier": {
		"arrowParens": "avoid",
		"bracketSpacing": false,
		"singleQuote": true,
		"trailingComma": "all",
		"useTabs": true
	},
	"scripts": {
		"build": "npm run lint && npm run webpack && web-ext lint -s dist",
		"lint": "prettier -w . && xo --fix",
		"sign": "env-cmd \"web-ext sign -s dist\"",
		"start": "concurrently \"web-ext run -s dist\" \"npm:webpack:w\"",
		"test": "xo",
		"webpack": "webpack -c production.config.js",
		"webpack:w": "webpack -c production.config.js -w"
	},
	"sideEffects": false,
	"version": "1.0.0",
	"xo": {
		"extends": [
			"xo-react"
		],
		"overrides": [
			{
				"files": "src/**/*.{ts,tsx}",
				"rules": {
					"@typescript-eslint/indent": "off",
					"@typescript-eslint/naming-convention": "off"
				}
			},
			{
				"files": "./*.js",
				"rules": {
					"unicorn/prefer-module": "off"
				}
			}
		],
		"rules": {
			"import/no-extraneous-dependencies": "off",
			"indent": "off",
			"no-mixed-spaces-and-tabs": [
				"error",
				"smart-tabs"
			],
			"react/jsx-curly-newline": "off",
			"react/jsx-indent": "off",
			"react/jsx-tag-spacing": [
				"error",
				{
					"beforeSelfClosing": "always"
				}
			],
			"react/no-unknown-property": [
				"error",
				{
					"ignore": [
						"class",
						"stroke-linecap",
						"stroke-linejoin",
						"stroke-width"
					]
				}
			],
			"react/prop-types": "off"
		},
		"settings": {
			"react": {
				"pragma": "h",
				"pragmaFrag": "Fragment"
			}
		}
	}
}
